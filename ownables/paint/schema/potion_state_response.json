{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PotionStateResponse",
  "type": "object",
  "required": [
    "color_hex",
    "current_amount",
    "issuer",
    "max_capacity",
    "owner"
  ],
  "properties": {
    "color_hex": {
      "type": "string"
    },
    "current_amount": {
      "type": "integer",
      "format": "uint8",
      "minimum": 0.0
    },
    "issuer": {
      "type": "string"
    },
    "max_capacity": {
      "type": "integer",
      "format": "uint8",
      "minimum": 0.0
    },
    "owner": {
      "type": "string"
    }
  }
}
